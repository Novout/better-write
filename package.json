{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "version": "0.11.2",
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "dev": "lerna exec yarn dev",
    "build": "lerna exec yarn build",
    "test": "lerna exec yarn test",
    "lint": "lerna exec yarn lint",
    "deploy": "yarn bootstrap && yarn build",
    "changelog:patch": "changelog -p",
    "lerna:patch": "lerna version patch",
    "changelog:minor": "changelog -m",
    "lerna:minor": "lerna version minor",
    "changelog:major": "changelog -M",
    "lerna:major": "lerna version major"
  },
  "devDependencies": {
    "lerna": "4.0.0",
    "standard-version": "9.3.2"
  }
}
