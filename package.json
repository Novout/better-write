{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "dev": "turbo run dev",
    "serve": "turbo run serve",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint --parallel --no-cache",
    "deploy": "yarn bootstrap && yarn build",
    "patch": "generi log patch",
    "minor": "generi log minor",
    "major": "generi log major"
  },
  "devDependencies": {
    "generi": "0.3.0",
    "lerna": "4.0.0",
    "turbo": "1.0.23"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ],
        "cache": false
      },
      "test": {
        "outputs": []
      },
      "dev": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ],
        "cache": false
      },
      "serve": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ],
        "cache": false
      },
      "lint": {}
    }
  }
}
