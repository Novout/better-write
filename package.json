{
  "name": "better-write",
  "version": "0.8.0",
  "repository": "https://github.com/Novout/better-write",
  "author": {
    "name": "Giovane Cardoso",
    "email": "novout@hotmail.com",
    "url": "https://github.com/Novout"
  },
  "description": "A editor for creative writers.",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "rm -rf ./dist && yarn build && vite preview",
    "desktop:set": "wait-on tcp:3000 && electron . --watch",
    "desktop:dev": "yarn build && concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn desktop:set\"",
    "desktop:start": "cross-env NODE_ENV=development electron dist/main/index.js",
    "desktop:build": "yarn desktop:release && electron-builder",
    "desktop:minimal": "yarn desktop:release && electron-builder --windows",
    "desktop:view": "yarn desktop:minimal && yarn desktop:dev",
    "desktop:release": "cross-env NODE_ENV=production tsc desktop/index.ts --moduleResolution Node --removeComments -t esnext --outDir dist/main && yarn build",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src && yarn format",
    "format": "prettier src/**/*.{vue,css,ts} --write",
    "test": "jest",
    "extract": "vue-i18n-extract report --vueFiles './src/**/*.?(js|vue)' --languageFiles './src/lang/*.?(json|yml|yaml|js)'",
    "release:initial": "standard-version --first-release",
    "release:minor": "standard-version --release-as minor",
    "release:alpha:minor": "standard-version --release-as minor --prerelease alpha",
    "release:beta:minor": "standard-version --release-as minor --prerelease beta",
    "release:patch": "standard-version --release-as patch",
    "release:alpha:patch": "standard-version --release-as patch --prerelease alpha",
    "release:beta:patch": "standard-version --release-as patch --prerelease beta",
    "release:major": "standard-version --release-as major",
    "release:alpha:major": "standard-version --release-as major --prerelease alpha",
    "release:beta:major": "standard-version --release-as major --prerelease beta",
    "release:alpha": "standard-version --prerelease alpha",
    "release:beta": "standard-version --prerelease beta",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@headlessui/vue": "1.4.2",
    "@tailwindcss/forms": "0.3.4",
    "@vuelidate/core": "2.0.0-alpha.32",
    "@vuelidate/validators": "2.0.0-alpha.25",
    "@vueuse/core": "6.8.0",
    "@vueuse/head": "0.6.0",
    "@vueuse/integrations": "6.8.0",
    "@vueuse/motion": "2.0.0-beta.4",
    "autoprefixer": "10.4.0",
    "date-fns": "2.25.0",
    "dropbox": "10.20.0",
    "electron-dl": "3.3.0",
    "electron-log": "4.4.1",
    "electron-updater": "4.3.9",
    "is-electron": "2.2.0",
    "keyboardjs": "2.6.4",
    "mitt": "3.0.0",
    "pdfmake": "0.2.4",
    "pinia": "2.0.0-rc.14",
    "postcss": "8.3.11",
    "tailwindcss": "2.2.19",
    "tailwindcss-typography": "3.1.0",
    "vite-plugin-package-version": "1.0.2",
    "vue": "3.2.21",
    "vue-i18n": "9.1.9",
    "vue-router": "4.0.12",
    "vue-toastification": "2.0.0-rc.5"
  },
  "devDependencies": {
    "@intlify/vite-plugin-vue-i18n": "3.1.0",
    "@types/jest": "27.0.2",
    "@types/jsdom": "16.2.13",
    "@types/pdfmake": "0.1.19",
    "@types/tailwindcss": "^2.2.4",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "@vitejs/plugin-vue": "1.9.4",
    "@vue/compiler-sfc": "3.2.21",
    "@vue/eslint-config-typescript": "9.0.1",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "electron": "15.3.1",
    "electron-builder": "22.11.7",
    "electron-dev-runner": "1.0.1",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-vue": "8.0.3",
    "jest": "27.3.1",
    "prettier": "2.4.1",
    "standard-version": "9.3.2",
    "ts-jest": "27.0.7",
    "typescript": "4.4.4",
    "unplugin-vue-components": "0.17.2",
    "vite": "2.6.14",
    "vite-plugin-optimize-persist": "0.1.0",
    "vite-plugin-package-config": "0.0.3",
    "vue-i18n-extract": "2.0.4",
    "vue-tsc": "0.29.3",
    "wait-on": "6.0.0"
  },
  "vite": {
    "optimizeDeps": {
      "include": [
        "@headlessui/vue",
        "@vue/reactivity",
        "@vueuse/core",
        "@vueuse/head",
        "@vueuse/motion",
        "axios",
        "date-fns",
        "date-fns/locale",
        "dropbox",
        "is-electron",
        "keyboardjs",
        "mitt",
        "node-fetch",
        "pdfmake/build/pdfmake",
        "pinia",
        "vue",
        "vue-i18n",
        "vue-router",
        "vue-toastification"
      ]
    }
  },
  "build": {
    "appId": "com.betterwrite.app",
    "productName": "Better Write",
    "directories": {
      "buildResources": "desktop/resources",
      "output": "build/dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Novout",
        "repo": "better-write"
      }
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Development"
    },
    "copyright": "Copyright Â© 2021 ${author}",
    "files": [
      "desktop/resources/**/*",
      "dist/**/*",
      "package.json"
    ]
  }
}
