{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint --parallel --no-cache",
    "deploy": "yarn bootstrap && yarn build",
    "patch": "generi log patch",
    "minor": "generi log minor",
    "major": "generi log major"
  },
  "devDependencies": {
    "lerna": "4.0.0",
    "turbo": "latest",
    "generi": "0.3.0"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"],
        "cache": false
      },
      "test": {
        "outputs": []
      },
      "dev": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"],
        "cache": false
      },
      "lint": {},
      "deploy": {
        "dependsOn": ["build", "test", "lint"]
      }
    }
  }
}
