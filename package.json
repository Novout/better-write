{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint --parallel --no-cache",
    "deploy": "yarn bootstrap && yarn build",
    "lerna:patch": "lerna version patch",
    "lerna:minor": "lerna version minor",
    "lerna:major": "lerna version major"
  },
  "devDependencies": {
    "lerna": "4.0.0",
    "turbo": "latest"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "test": {
        "outputs": []
      },
      "dev": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "lint": {},
      "deploy": {
        "dependsOn": ["build", "test", "lint"]
      }
    }
  }
}
