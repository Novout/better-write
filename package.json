{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --use-workspaces",
    "dev": "turbo run dev",
    "serve": "turbo run serve",
    "build": "turbo run build",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "e2e:ci": "turbo run e2e:ci",
    "e2e:start": "lerna run --scope better-write-app e2e:start",
    "lint": "turbo run lint --parallel --no-cache",
    "deploy": "yarn bootstrap && yarn build",
    "patch": "generi log patch",
    "minor": "generi log minor",
    "major": "generi log major"
  },
  "devDependencies": {
    "generi": "0.3.0",
    "lerna": "4.0.0",
    "turbo": "1.2.5"
  },
  "packageManager": "yarn@1.22.17"
}
